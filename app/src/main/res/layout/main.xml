<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <Button
        android:id="@+id/btn_select"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Connect"
        android:layout_gravity="right" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="102dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:id="@+id/RelativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">

            </RelativeLayout>

            <TextView
                android:id="@+id/deviceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="33dp" />

            <TextView
                android:id="@+id/deviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="@string/no_device"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_gravity="center|top"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/deviceLabel"
                android:layout_marginStart="84dp" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="268dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:baselineAligned="false"
            android:weightSum="1">

            <Button
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:text="Tempo +"
                android:id="@+id/button_time_more"
                android:background="#cac7c7"
                android:textColor="#000000"
                android:layout_gravity="right"
                android:layout_weight="0.36" />

            <FrameLayout
                android:layout_width="31dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"></FrameLayout>

            <Button
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:text="Tempo -"
                android:id="@+id/button_time_less"
                android:background="#cac7c7"
                android:textColor="#000000"
                android:layout_weight="0.53" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:weightSum="1">

            <Button
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="Quantidade de Massa"
                android:id="@+id/button_dough_qnt"
                android:background="#cac7c7"
                android:textColor="#000000"
                android:layout_gravity="right"
                android:layout_weight="0.37" />

            <FrameLayout
                android:layout_width="29dp"
                android:layout_height="match_parent"
                android:layout_weight="0.19"></FrameLayout>

            <Button
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:text="Opções"
                android:id="@+id/button_options"
                android:background="#cac7c7"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_weight="0.50" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:weightSum="1">

            <Button
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:text="Cor"
                android:id="@+id/button_color"
                android:background="#cac7c7"
                android:textColor="#000000"
                android:layout_gravity="right"
                android:layout_weight="0.40" />

            <FrameLayout
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:layout_weight="0.14"></FrameLayout>

            <Button
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:text="Iniciar / Parar"
                android:id="@+id/button_init_stop"
                android:background="#cac7c7"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_weight="0.50" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:text="Escolher receita"
        android:id="@+id/startRecipesBookSelectionActivity"
        android:layout_gravity="center_horizontal" />

</LinearLayout>